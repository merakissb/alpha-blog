            <%= form.label :Comentario, class: "col-2 col-form-label text-black" %>
            <div class="col-10">
              <%= form.text_area :body, class: "form-control shadow rounded", placeholder: "Escribe aquÃ­ tu comentario."%>
            </div>
          </div>
          <div class="form-group row justify-content-center">
            <%= form.submit class: "btn btn-dark" %>
