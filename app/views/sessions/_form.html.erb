<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 mt-5", html: { id: "form_new" }, local: true)do |f| %>
        <div>
         <h2 class="text-center" id="title-session"> Inicia Sesión</h2>
        </div>
        <div class="form-group row justify-content-center">
          <div class="col-md-8">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Correo electronico" %>
          </div>
        </div> 
        <div class="form-group row justify-content-center">
          <div class="col-md-8">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Contraseña" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit "Iniciar Sesión", class: "btn btn-outline-light" %>
        </div>
      <% end %>
    </div>
  </div>
</div>