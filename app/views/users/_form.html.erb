<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 mt-5", html: { id: "form_new" }, local: true)do |f| %>
        <div>
         <h2 class="text-center" id="title-session"> Registrate en Reblog</h2>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-md-8">
              <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Introduce un nombre de perfil" %>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <div class="col-md-8">
                <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Introduce tu correo electronico" %>
            </div>
        </div> 
        <div class="form-group row justify-content-center">
            <div class="col-md-8">
                <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Crea una contraseÃ±a" %>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <%= f.submit(@user.new_record? ? "Registrarte" : "Update account", class: "btn btn-outline-light") %>
        </div>
        <% end %>
    </div>
  </div>
</div>